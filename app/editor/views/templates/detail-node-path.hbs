<div class="row-fluid shape-controls" style="display: none;">
	<div class="span12">
		<div class="btn-group" id="path-attribute-shape" data-toggle="buttons-radio">
			<button type="button" class="btn btn-inverse" value="circle">
				<span id="icon-shape-circle">Circle</span>
			</button>
			<button type="button" class="btn btn-inverse" value="square"><span id="icon-shape-square">Square</span></button>
			<button type="button" class="btn btn-inverse" value="hexagon"><span id="icon-shape-hexagon">Hexagon</span></button>
			<button type="button" class="btn btn-inverse" value="triangle"><span id="icon-shape-triangle">Triangle</span></button>
			<button type="button" class="btn btn-inverse" value="plus"><span id="icon-shape-plus">Plus</span></button>
			<button type="button" class="btn btn-inverse" value="none"><span id="icon-shape-none">None</span></button>
		</div>
	</div>
</div>

<div class="row-fluid shape-controls">
	<div class="span4">
		<label>Shape</label>
		<div class="dropdown">
			<a class="dropdown-toggle" data-toggle="dropdown" id="select_01" href="#">
				<span class="selection-icon" id="icon-shape-hexagon">Hexagon</span> <b class="caret"></b>
			</a>
			<div id="menu1" class="dropdown-menu" role="menu" aria-labelledby="select_01">
			<ul id="path-attribute-shape" data-toggle="buttons-radio">
				<li role="presentation">
					<button type="button" class="btn" value="circle"><span class="selection-icon" id="icon-shape-circle">Circle</span></button>
				</li>
				<li role="presentation">
					<button type="button" class="btn" value="square"><span class="selection-icon" id="icon-shape-square">Square</span></button>
				</li>
				<li role="presentation">
					<button type="button" class="btn" value="hexagon"><span class="selection-icon" id="icon-shape-hexagon">Hexagon</span></button>
				</li>
				<li role="presentation">
					<button type="button" class="btn" value="triangle"><span class="selection-icon" id="icon-shape-triangle">Triangle</span></button>
				</li>
				<li role="presentation">
					<button type="button" class="btn" value="plus"><span class="selection-icon" id="icon-shape-plus">Plus</span></button>
				</li>
				<li role="presentation">
					<button type="button" class="btn" value="none"><span class="selection-icon" id="icon-shape-none">None</span></button>
				</li>
			</ul>
			</div>
		</div>
		
		<div class="input-append" style="display: none;">
  		<input class="span9" id="path-attribute-scale" type="text" value="">
  		<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label>
			<canvas class="fill-preview" style="background-color: {{fill}}"></canvas> Fill 
			<a class="fill-image pull-right" title="Coming soon!" href="#">
				<i class="icon-picture"></i>
			</a>
		</label>
		<input class="span12" id="path-attribute-fill" type="text" value="{{fill}}" placeholder="none">
	</div>
	<div class="span4">
		<label>Alpha</label>
		<div class="input-append">
			<input class="span9" id="path-attribute-fill-opacity" type="text" value="{{fill_opacity}}">
			<span class="add-on">%</span>
		</div>
	</div>
</div>

<div class="row-fluid shape-controls">
	<div class="span4">
		<label>Border</label>
		<div class="input-append">
  		<input class="span9" id="path-attribute-stroke-width" type="text" value="{{stroke_width}}">
  		<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label><canvas class="stroke-preview" style="background-color: {{stroke}}"></canvas> Stroke</label>
		<input class="span12" id="path-attribute-stroke" type="text" value="{{stroke}}" placeholder="none">
	</div>
	<div class="span4">
		<label>Alpha</label>
		<div class="input-append">
			<input class="span9" id="path-attribute-stroke-opacity" type="text" value="{{stroke_opacity}}">
			<span class="add-on">%</span>
		</div>
	</div>
</div>

<div class="row-fluid shape-controls">
	<div class="span8">
		<label>Dash</label>
		<div id="path-attribute-stroke-dasharray" class="attribute-stroke-dasharray">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
		</div>
	</div>
	<div class="span4">
		<label>Cap</label>
		<div class="btn-group attribute-stroke-linecap" id="path-attribute-stroke-linecap" data-toggle="buttons-radio">
			<button type="button" class="btn btn-inverse" value="round"><span id="icon-linecap-round">Round</span></button>
			<button type="button" class="btn btn-inverse" value="square"><span id="icon-linecap-square">Square</span></button>
			<button type="button" class="btn btn-inverse" value="butt"><span id="icon-linecap-butt">Butt</span></button>
		</div>
	</div>
</div>

<div class="row-fluid shape-controls">
	<div class="span4">
		<label>Height</label>
		<div class="input-append">
			<input class="span9" id="path-attribute-height" type="text" value="{{height}}">
			<span class="add-on">px</span>
		</div>
	</div>
		<div class="span4">
		<label>Width</label>
		<div class="input-append">
			<input class="span9" id="path-attribute-width" type="text" value="{{width}}">
			<span class="add-on">px</span>
		</div>
	</div>
		<div class="span4">
		<label>Rotation</label>
		<div class="input-append">
			<input class="span9" id="path-attribute-rotate" type="text" value="{{rotate}}">
			<span class="add-on">&nbsp;&#186;&nbsp;</span>
		</div>
	</div>
</div>