
  <div class="detail-section">
    <h2>Baseline</h2>
    <div id="detail-baseline">
      <div class="detail-inner" id="link-baseline">

				<div class="row-fluid">
					<div class="span4">
						<label>Width</label>
						<div class="input-append">
							<input class="span9" id="baseline-attribute-stroke-width" type="text" value="{{stroke_width}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><canvas class="stroke-preview" style="background-color: {{stroke}}"></canvas> Stroke</label>
						<input class="span12" id="baseline-attribute-stroke" type="text" value="{{stroke}}" placeholder="none">
					</div>
					<div class="span4">
						<label>Alpha</label>
						<div class="input-append">
							<input class="span9" id="baseline-attribute-stroke-opacity" type="text" value="{{stroke_opacity}}">
							<span class="add-on">%</span>
						</div>
					</div>
				</div>

				<div class="row-fluid">
					<div class="span8">
						<label>Dash</label>
						<div id="baseline-attribute-stroke-dasharray" class="attribute-stroke-dasharray">
							<input class="span2" type="text" value="">
							<input class="span2" type="text" value="">
							<input class="span2" type="text" value="">
							<input class="span2" type="text" value="">
							<input class="span2" type="text" value="">
							<input class="span2" type="text" value="">
						</div>
					</div>
					<div class="span4">
						<label>Cap</label>
						<div class="btn-group attribute-stroke-linecap" id="baseline-attribute-stroke-linecap" data-toggle="buttons-radio">
							<button type="button" class="btn btn-inverse" value="round"><span id="icon-linecap-round">Round</span></button>
							<button type="button" class="btn btn-inverse" value="square"><span id="icon-linecap-square">Square</span></button>
							<button type="button" class="btn btn-inverse" value="butt"><span id="icon-linecap-butt">Butt</span></button>
						</div>
					</div>
				</div>

				<div class="row-fluid">
					<div class="span4" id="marker-start"></div>
					<div class="span4" id="baseline-curve">
						<label>Curve</label>
						<div class="dropdown" id="baseline-attribute-curve">
							<a class="dropdown-toggle" data-toggle="dropdown" id="select_03" href="#">
								<span class="selection-icon" id="icon-curve-basis"></span> <b class="caret"></b>
							</a>
							<div id="menu1" class="dropdown-menu" role="menu" aria-labelledby="select_03">
								<ul data-toggle="buttons-radio">
									<li role="presentation">
										<button type="button" class="btn" value="basis"><span class="selection-icon" id="icon-curve-basis">Basis</span></button>
									</li>
									<li role="presentation">
										<button type="button" class="btn" value="linear"><span class="selection-icon" id="icon-curve-linear">Linear</span></button>
									</li>
									<li role="presentation">
										<button type="button" class="btn" value="step-before"><span class="selection-icon" id="icon-curve-step-before">Step-before</span></button>
									</li>
									<li role="presentation">
										<button type="button" class="btn" value="step-after"><span class="selection-icon" id="icon-curve-step-after">Step-after</span></button>
									</li>
								</ul>
							</div>
						</div>
						<div class="hidden-fields collapse" id="curve-extra">
							<label><canvas class="fill-preview" style="background-color: {{fill}}"></canvas> Fill</label>
							<input class="span12" id="baseline-attribute-fill" type="text" value="{{fill}}">
						</div>
					</div>
					<div class="span4" id="marker-end"></div>
				</div>

       	<div>
					<a class="detail-toggle" data-toggle="collapse" data-target="#curve-extra, #marker-start-extra, #marker-end-extra" href="javascript:;"><i class="icon-plus-sign"></i> More options</a>
				</div>
				
      </div>
    </div>
  </div>

  <div class="detail-section">
    <h2>Label</h2>
    <div id="detail-label">
      <div class="detail-inner" id="link-label">
      	
				<div class="row-fluid label-controls">
					<div class="span12">
						<input id="label-attribute-text" class="span12" type="text" value="{{label_text}}" placeholder="None">
					</div>
				</div>

				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Font Size</label>
						<div class="input-append">
							<input class="span9" id="label-attribute-font-size" type="text" value="{{label_font_size}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><canvas class="fill-preview" style="background-color: {{label_fill}}"></canvas> Fill</label>
						<input class="span12" id="label-attribute-fill" type="text" value="{{label_fill}}">
					</div>
					<div class="span4">
						<label>Alpha</label>
						<div class="input-append">
							<input class="span9" id="label-attribute-fill-opacity" type="text" value="{{label_fill_opacity}}">
							<span class="add-on">%</span>
						</div>
					</div>
				</div>

				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Style</label>
						<div class="btn-group" id="label-attribute-style" data-toggle="buttons-checkbox">
							<button type="button" class="btn btn-inverse{{#if label_bold}} active{{/if}}" value="{{#if label_bold}}true{{else}}false{{/if}}"><b>B</b></button>
							<button type="button" class="btn btn-inverse{{#if label_italic}} active{{/if}}" value="{{#if label_italic}}true{{else}}false{{/if}}"><i>I</i></button>
						</div>
					</div>
					<div class="span4">
						<label>Alignment</label>
						<div class="btn-group attribute-label-align" id="label-attribute-align" data-toggle="buttons-radio">
							<button type="button" class="btn btn-inverse" value="start"><span id="icon-align-start">Left</span></button>
							<button type="button" class="btn btn-inverse" value="middle"><span id="icon-align-middle">Center</span></button>
							<button type="button" class="btn btn-inverse" value="end"><span id="icon-align-end">Right</span></button>
						</div>
					</div>
					<div class="span4">
						<label>Spacing</label>
						<div class="input-append">
							<input class="span9" id="label-attribute-spacing" type="text" value="{{label_spacing}}">
							<span class="add-on">px</span>
						</div>
					</div>
				</div>
				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Padding</label>
						<div class="input-append">
							<input class="span9" id="label-attribute-x" type="text" value="{{label_offset_x}}">
							<span class="add-on">%</span>
						</div>
					</div>
					<div class="span4">
						<label>Vertical</label>
						<div class="input-append">
							<input class="span9" id="label-attribute-y" type="text" value="{{label_offset_y}}">
							<span class="add-on">px</span>
						</div>
					</div>
				</div>

      </div>
    </div>
  </div>
