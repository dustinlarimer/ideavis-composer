<div class="detail-panel-header">
	<h2>Link Detail</h2>
</div>
<hr/>
<div class="detail-panel-bucket" id="link-attributes">

<div id="baseline-attributes">
<h4>Baseline</h4>

<div class="row-fluid">
	<div class="span4">
		<label>Width</label>
		<div class="input-append">
  		<input class="span9" id="baseline-attribute-stroke-width" type="text" value="{{stroke_width}}">
  		<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label><canvas class="stroke-preview" style="border-color: {{stroke}}"></canvas> Stroke</label>
		<input class="span12" id="baseline-attribute-stroke" type="text" value="{{stroke}}">
	</div>
	<div class="span4">
		<label>Alpha</label>
		<div class="input-append">
			<input class="span9" id="baseline-attribute-stroke-opacity" type="text" value="{{stroke_opacity}}">
			<span class="add-on">%</span>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span8">
		<label>Dash</label>
		<div id="baseline-attribute-stroke-dasharray" class="attribute-stroke-dasharray">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
			<input class="span2" type="text" value="">
		</div>
	</div>
	<div class="span4">
		<label>Cap</label>
		<div class="btn-group attribute-stroke-linecap" id="baseline-attribute-stroke-linecap" data-toggle="buttons-radio">
			<button type="button" class="btn btn-inverse" value="round"><span id="icon-linecap-round">Round</span></button>
			<button type="button" class="btn btn-inverse" value="square"><span id="icon-linecap-square">Square</span></button>
			<button type="button" class="btn btn-inverse" value="butt"><span id="icon-linecap-butt">Butt</span></button>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span8">
		<label>Curve</label>
		<div class="btn-group" id="baseline-attribute-interpolation" data-toggle="buttons-radio">
			<button type="button" class="btn btn-inverse" value="basis"><span id="icon-interpolation-basis">Basis</span></button>
			<button type="button" class="btn btn-inverse" value="linear"><span id="icon-interpolation-linear">Linear</span></button>
			<button type="button" class="btn btn-inverse" value="step-before"><span id="icon-interpolation-step-before">Step-before</span></button>
			<button type="button" class="btn btn-inverse" value="step-after"><span id="icon-interpolation-step-after">Step-after</span></button>
		</div>
	</div>
	<div class="span4">
		<label><canvas class="fill-preview" style="background-color: {{fill}}"></canvas> Fill</label>
		<input class="span12" id="baseline-attribute-fill" type="text" value="{{fill}}">
	</div>
</div>
<hr style="margin-bottom: 10px;"/>



<h4>Label</h4>

<div class="row-fluid label-controls">
	<div class="span12">
		<input id="label-attribute-text" class="span12" type="text" value="{{label_text}}" placeholder="None">
	</div>
</div>

<div class="row-fluid label-controls">
	<div class="span4">
		<label>Font Size</label>
		<div class="input-append">
  		<input class="span9" id="label-attribute-font-size" type="text" value="{{label_font_size}}">
  		<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label><canvas class="fill-preview" style="background-color: {{label_fill}}"></canvas> Fill</label>
		<input class="span12" id="label-attribute-fill" type="text" value="{{label_fill}}">
	</div>
	<div class="span4">
		<label>Alpha</label>
		<div class="input-append">
			<input class="span9" id="label-attribute-fill-opacity" type="text" value="{{label_fill_opacity}}">
			<span class="add-on">%</span>
		</div>
	</div>
</div>

<div class="row-fluid label-controls">
	<div class="span4">
		<label>Indent</label>
		<div class="input-append">
			<input class="span9" id="label-attribute-x" type="text" value="{{label_offset_x}}">
			<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label>Vertical</label>
		<div class="input-append">
			<input class="span9" id="label-attribute-y" type="text" value="{{label_offset_y}}">
			<span class="add-on">px</span>
		</div>
	</div>
	<div class="span4">
		<label>Spacing</label>
		<div class="input-append">
  		<input class="span9" id="label-attribute-spacing" type="text" value="{{label_spacing}}">
  		<span class="add-on">px</span>
		</div>
	</div>
</div>

</div>

<hr/>
<div class="row-fluid">
	<div class="span12">
		<ul class="nav nav-tabs">
  		<li class="active">
		    <a href="#marker-start" data-toggle="tab"><i class="icon-circle-arrow-left icon-white"></i> Start</a>
		  </li>
		  <li><a href="#marker-end" data-toggle="tab"><i class="icon-circle-arrow-right icon-white"></i> End</a></li>
			<!--<li><a href="#baseline-background" data-toggle="tab">Background</a></li>
		  <li><a href="#baseline-midpoints" data-toggle="tab">Midpoints</a></li>-->
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="marker-start"></div>
			<div class="tab-pane" id="marker-end"></div>
			<div class="tab-pane" id="baseline-background">
				<div class="row-fluid">
					<div class="span4">
						<label>Width</label>
						<div class="input-append">
							<input class="span9" id="background-attribute-width" type="text" value="{{background_width}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><canvas class="fill-preview" style="background-color: {{background_fill}}"></canvas> Fill</label>
						<input class="span12" id="background-attribute-fill" type="text" value="{{background_fill}}">
					</div>
					<div class="span4">
						<label>Alpha</label>
						<div class="input-append">
							<input class="span9" id="background-attribute-fill-opacity" type="text" value="{{background_fill_opacity}}">
							<span class="add-on">%</span>
						</div>
					</div>
				</div>
			</div>
			<!--<div class="tab-pane" id="baseline-midpoints"></div>-->
		</div>
	</div>
</div>




</div>