<label>Start</label>
<div class="dropdown" id="marker-start-attribute-type">
	<a class="dropdown-toggle" data-toggle="dropdown" id="select_01" href="#">
		<span class="selection-icon" id="icon-marker-circle"></span> <b class="caret"></b>
	</a>
	<div id="menu1" class="dropdown-menu" role="menu" aria-labelledby="select_01">
		<ul data-toggle="buttons-radio">
			<li role="presentation">
				<button type="button" class="btn" value="none"><span class="selection-icon" id="icon-marker-none">None</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="circle"><span class="selection-icon" id="icon-marker-circle">Circle</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="square"><span class="selection-icon" id="icon-marker-square">Square</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="stem"><span class="selection-icon" id="icon-marker-stem">Hexagon</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="equal-arrow-start"><span class="selection-icon" id="icon-marker-equal-arrow-start">Equilateral Arrow</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="right-arrow-start"><span class="selection-icon" id="icon-marker-right-arrow-start">Right-angle Arrow</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="sharp-arrow-start"><span class="selection-icon" id="icon-marker-sharp-arrow-start">Sharp Arrow</span></button>
			</li>
			<li role="presentation">
				<button type="button" class="btn" value="reverse-start"><span class="selection-icon" id="icon-marker-reverse-start">Reverse Arrow</span></button>
			</li>
		</ul>
	</div>
</div>

<div class="hidden-fields collapse" id="marker-start-extra">
	
	<label><canvas class="fill-preview" style="background-color: {{fill}}"></canvas> Fill</label>
	<div><input class="span12" id="marker-start-attribute-fill" type="text" value="{{fill}}" placeholder='none'></div>

	<label>Inset</label>
	<div class="input-append">
		<input class="span9" id="marker-start-attribute-offset-x" type="text" value="{{offset_x}}">
		<span class="add-on">px</span>
	</div>

	<label>Width</label>
	<div class="input-append">
		<input class="span9" id="marker-start-attribute-width" type="text" value="{{width}}">
		<span class="add-on">px</span>
	</div>

</div>