<div class="axis-attributes">
  <div class="detail-section">
    <h2>Position</h2>
    <div id="detail-position">
      <div class="detail-inner">
				<div class="row-fluid">
					<div class="span4">
						<label><strong>X</strong></label>
						<div class="input-append">
							<input id="axis-attribute-x" class="span8 input-x" type="text" value="{{x}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><strong>Y</strong></label>
						<div class="input-append">
							<input id="axis-attribute-y" class="span8 input-y" type="text" value="{{y}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><strong>R<sup>&#186;</sup></strong></label>
						<div class="input-append">
							<input id="axis-attribute-rotate" class="span8 input-rotate" type="text" value="{{rotate}}">
							<span class="add-on">&nbsp;&#186;&nbsp;</span>
						</div>
					</div>
				</div>
      </div>
    </div>
  </div>
	<div class="detail-section">
    <h2>Baseline</h2>
    <div id="detail-baseline">
      <div class="detail-inner" id="axis-baseline">
				<div class="row-fluid">
					<div class="span4">
						<label>Width</label>
						<div class="input-append">
							<input class="span9 input-stroke-width" id="baseline-attribute-stroke-width" type="text" value="{{stroke_width}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><canvas class="stroke-preview" style="background-color: {{stroke}}"></canvas> Stroke</label>
						<input class="span12 input-stroke" id="baseline-attribute-stroke" type="text" value="{{stroke}}" placeholder="none">
					</div>
					<div class="span4">
						<label>Alpha</label>
						<div class="input-append">
							<input class="span9 input-stroke-opacity" id="baseline-attribute-stroke-opacity" type="text" value="{{stroke_opacity}}">
							<span class="add-on">%</span>
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span8">
						<label>Dash</label>
						<div id="baseline-attribute-stroke-dasharray" class="attribute-stroke-dasharray">
							<input class="span2 input-stroke-dasharray" type="text" value="">
							<input class="span2 input-stroke-dasharray" type="text" value="">
							<input class="span2 input-stroke-dasharray" type="text" value="">
							<input class="span2 input-stroke-dasharray" type="text" value="">
							<input class="span2 input-stroke-dasharray" type="text" value="">
							<input class="span2 input-stroke-dasharray" type="text" value="">
						</div>
					</div>
					<div class="span4">
						<label>Cap</label>
						<div class="btn-group attribute-stroke-linecap" id="baseline-attribute-stroke-linecap" data-toggle="buttons-radio">
							<button type="button" class="btn btn-inverse input-stroke-linecap" value="round"><span id="icon-linecap-round">Round</span></button>
							<button type="button" class="btn btn-inverse input-stroke-linecap" value="square"><span id="icon-linecap-square">Square</span></button>
							<button type="button" class="btn btn-inverse input-stroke-linecap" value="butt"><span id="icon-linecap-butt">Butt</span></button>
						</div>
					</div>
				</div>
      </div>
    </div>
  </div>
	<div class="detail-section">
    <h2>Label</h2>
    <div id="detail-label">
      <div class="detail-inner" id="axis-label">
				<div class="row-fluid label-controls">
					<div class="span12">
						<input id="label-attribute-text" class="span12 input-label-text" type="text" value="{{label_text}}" placeholder="None">
					</div>
				</div>
				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Font Size</label>
						<div class="input-append">
							<input class="span9 input-label-font-size" id="label-attribute-font-size" type="text" value="{{label_font_size}}">
							<span class="add-on">px</span>
						</div>
					</div>
					<div class="span4">
						<label><canvas class="fill-preview" style="background-color: {{label_fill}}"></canvas> Fill</label>
						<input class="span12 input-label-fill" id="label-attribute-fill" type="text" value="{{label_fill}}">
					</div>
					<div class="span4">
						<label>Alpha</label>
						<div class="input-append">
							<input class="span9 input-label-fill-opacity" id="label-attribute-fill-opacity" type="text" value="{{label_fill_opacity}}">
							<span class="add-on">%</span>
						</div>
					</div>
				</div>
				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Style</label>
						<div class="btn-group attribute-label-style" id="label-attribute-style" data-toggle="buttons-checkbox">
							<button type="button" class="btn btn-inverse{{#if label_bold}} active{{/if}}" value="{{#if label_bold}}true{{else}}false{{/if}}"><b>B</b></button>
							<button type="button" class="btn btn-inverse{{#if label_italic}} active{{/if}}" value="{{#if label_italic}}true{{else}}false{{/if}}"><i>I</i></button>
						</div>
					</div>
					<div class="span4">
						<label>Alignment</label>
						<div class="btn-group attribute-label-align" id="label-attribute-align" data-toggle="buttons-radio">
							<button type="button" class="btn btn-inverse" value="start"><span id="icon-align-start">Left</span></button>
							<button type="button" class="btn btn-inverse" value="middle"><span id="icon-align-middle">Center</span></button>
							<button type="button" class="btn btn-inverse" value="end"><span id="icon-align-end">Right</span></button>
						</div>
					</div>
					<div class="span4">
						<label>Spacing</label>
						<div class="input-append">
							<input class="span9 input-label-spacing" id="label-attribute-spacing" type="text" value="{{label_spacing}}">
							<span class="add-on">px</span>
						</div>
					</div>
				</div>
				<div class="row-fluid label-controls">
					<div class="span4">
						<label>Padding</label>
						<div class="input-append">
							<input class="span9 input-label-offset-x" id="label-attribute-x" type="text" value="{{label_offset_x}}">
							<span class="add-on">%</span>
						</div>
					</div>
					<div class="span4">
						<label>Vertical</label>
						<div class="input-append">
							<input class="span9 input-label-offset-y" id="label-attribute-y" type="text" value="{{label_offset_y}}">
							<span class="add-on">px</span>
						</div>
					</div>
				</div>
      </div>
    </div>
  </div>
</div>