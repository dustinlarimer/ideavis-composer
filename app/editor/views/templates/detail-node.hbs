<hr/>
<div class="detail-panel-bucket" id="node-attributes">
	<h2>Selection Attributes</h2>
	<form>
		<div class="row-fluid">
			<div class="span3">
				<label><strong>X</strong></label>
				<div class="input-append">
					<input id="node-attribute-x" class="span8 text-center" type="text" value="{{x}}">
					<span class="add-on">px</span>
				</div>
			</div>
			<div class="span3">
				<label><strong>Y</strong></label>
				<div class="input-append">
					<input id="node-attribute-y" class="span8 text-center" type="text" value="{{y}}">
					<span class="add-on">px</span>
				</div>
			</div>
			<div class="span3">
				<label><strong>R<sup>&#186;</sup></strong></label>
				<div class="input-append">
					<input id="node-attribute-rotate" class="span8 text-center" type="text" value="{{rotate}}">
					<span class="add-on">&nbsp;&#186;&nbsp;</span>
				</div>
			</div>
			<div class="span3">
				<label><strong>Alpha</strong></label>
				<div class="input-append">
					<input id="node-attribute-opacity" class="span8 text-center" type="text" value="{{opacity}}">
					<span class="add-on">%</span>
				</div>
			</div>
		</div>
	</form>
</div>

<div class="accordion" id="detail-node-accordian">
	
  <div class="accordian-section">
    <h2 class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#detail-node-accordian" href="#detail-shapes">
        Shape
      </a>
    </h2>
    <div id="detail-shapes" class="accordion-body collapse in">
      <div class="accordion-inner" id="node-paths"></div>
    </div>
  </div>

  <div class="accordian-section">
    <h2 class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#detail-node-accordian" href="#detail-texts">
        Label
      </a>
    </h2>
    <div id="detail-texts" class="accordion-body collapse in">
      <div class="accordion-inner" id="node-texts"></div>
    </div>
  </div>

</div>