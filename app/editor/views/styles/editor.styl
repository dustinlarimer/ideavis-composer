@import 'nib'

/* ==========================================================================
   Editor styles
   ========================================================================== */

body {
	/*background: #fbfbfb;
	overflow: hidden;*/
}

#controls {
	left: 20px;
	position: absolute;
	top: 60px;
	z-index: 1;
}

#canvas, #stage {
	height: 100%;
	position: absolute;
	width: 100%;
}

#canvas {
	top: 40px;
}
#stage {
	height: 100%;
	top: 0px;
}


/*
 *	Demo styles
 */

.node {
	cursor: pointer;
	/*cursor: -webkit-grab;
	 cursor: -webkit-grabbing; */
}

.node_selected {
  fill: #ff7f0e;
  stroke: #ff7f0e;
}

.drag_line {
  stroke: #999;
  stroke-width: 5;
  pointer-events: none;
}

.drag_line_hidden {
  stroke: #999;
  stroke-width: 0;
  pointer-events: none;
}

.link {
  stroke: #999;
  stroke-width: 5;
  cursor: crosshair;
}

.link_selected {
  stroke: #ff7f0e;
}