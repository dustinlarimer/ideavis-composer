@import 'nib'

/* ==========================================================================
   Editor styles
   ========================================================================== */

body
  padding 0

#canvas
  background #e5e5e5

.navbar
  .navbar-inner
    background rgba(0,0,0,.75)
    border medium none
    box-shadow none
  
  .container
    padding 5px 0
    width auto
  
  .brand
    color #fff
    font-size 15px
    margin 0
    padding 10px 10px
    text-align center
    text-shadow none
    width 50px

  form.navbar-form
    input
      background rgba(0,0,0,.2)
      border-radius 2px
      border medium none
      box-shadow inset 1px 1px 1px rgba(0,0,0,.25)
      color #fff !important
      font-size 16px
      font-weight 700
      height auto
      margin-left 12px
      padding 6px 10px 4px
      text-shadow 1px 1px 1px rgba(0,0,0,.25)
    input::-webkit-input-placeholder
      font-size 12px
      font-weight lighter
      line-height 22px
    input::-moz-placeholder
      font-size 12px
      font-weight lighter
      line-height 22px
  
#stage
  background #fff
  margin 0 0 0 50px
  padding 50px 0 0


#controls
  position absolute
  top 0
 	z-index 1

  #toolbar
    padding 62px 10px 0
    position absolute
    z-index 1
    
    hr
      border-top 1px solid rgba(0,0,0,.2)
      border-bottom 1px solid #fff
      margin 0 0 12px
    
    .btn-group+.btn-group
      margin-left 0
    
    .btn-group > .btn
      background rgba(0,0,0,.20)
      border medium none
      border-radius 4px
      box-shadow none
      height 28px
      margin 0 0 12px
      padding 4px
      text-align center
      transition background .25s
      width 28px
      &:hover, &:focus
        background rgba(0,0,0,.35)
      &.active
        background rgba(0,169,167,.5)

  #detail
    background rgba(0,0,0,.75)
    border-radius 4px
    color #fff
    font-size 12px
    min-height 100px
    padding 0 0 5px
    position fixed
    right 10px
    top 62px
    width 240px
    
    h2
      font-size 14px
      line-height 14px
      margin 8px 0 0
      text-transform uppercase
    
    h4
      font-size 14px
      margin 10px 0 5px

    hr
      border-top medium none
      border-bottom 1px solid rgba(0,0,0,.5)
      box-shadow 0 1px 1px rgba(255,255,255,.2)
      margin 5px 0

    form
      margin 0

    label
      color #a7a7a7
      font-size 12px
      margin-bottom 0

      strong
        color #e5e5e5
        display block

    input
      background #4d4d4d
      border-color #282828
      box-shadow inset 1px 1px 1px rgba(0,0,0,.2)
      color #fff
      font-size 12px
      margin-bottom 5px

    .input-append,
    .input-prepend
      margin-bottom 0
      .add-on
        background #333
        border-color #282828
        color #a7a7a7
        font-size 11px
        height auto
        text-shadow none

    .btn-group
      width 100%

      .btn
        width 33%

#detail .detail-panel-header {
	padding: 0 10px;
}
#detail .detail-panel-bucket {
  padding: 0 10px;
}
#detail .detail-panel-bucket table { margin: 0; }






/*
 *	Demo styles
 */

g.nodeGroup,
g.linkGroup {
	cursor: pointer;
}

path.bounds,
rect.bounds {
  stroke: #000000;
  stroke-width: 1;
  opacity: 0;
}

g.nodeGroup:hover .bounds {
  opacity: .25
}

.nodeGroup.active .bounds, .nodeGroup.active:hover .bounds,
.nodeGroup.active rect.bounds, .nodeGroup.active:hover rect.bounds,
.nodeGroup.active path.origin, .nodeGroup.active:hover path.origin {
  opacity: .5
}





.drag_line {
  stroke: #999;
  stroke-width: 5;
  pointer-events: none;
}

.drag_line_hidden {
  stroke: #999;
  stroke-width: 0;
  pointer-events: none;
}

.link {
  stroke: #999;
  stroke-width: 5;
  cursor: crosshair;
}

.link_selected {
  stroke: #ff7f0e;
}