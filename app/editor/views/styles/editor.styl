@import 'nib'

/* ==========================================================================
   Editor styles
   ========================================================================== */

body {
	/*background: #fbfbfb;
	overflow: hidden;*/
}

#controls {
	position: absolute;
}

#toolbar {
  background: rgba(0,0,0,.5);
	border-radius: 4px;
	left: 20px;
	padding: 5px 5px 0;
	position: absolute;
	top: 20px;
	z-index: 1;
}
#toolbar .btn-group { white-space: normal }
#toolbar .btn-group > .btn {
	background: rgba(0,0,0,.25)
	border-radius: 4px;
	color: #fff;
	font-size: 12px;
	margin: 0 0 5px;
	padding: 4px;
	text-shadow: 0 1px 1px rgba(0,0,0,.75)
	width: 100%;
}
#toolbar .btn-group > .btn:focus,
#toolbar .btn-group > .btn:hover {
	background: rgba(0,0,0,.35)
}
#toolbar .btn-group > .btn.active {
	background: rgba(0,0,0,.5)
}

#canvas, #stage {
	/*height: 100%;*/
	position: absolute;
	width: 100%;
}

#canvas {
	top: 40px;
}
#stage {
	top: 0px;
}


/*
 *	Demo styles
 */

.node {
	cursor: pointer;
	/*cursor: -webkit-grab;
	 cursor: -webkit-grabbing; */
}

.node_selected {
  fill: #ff7f0e;
  stroke: #ff7f0e;
}

.drag_line {
  stroke: #999;
  stroke-width: 5;
  pointer-events: none;
}

.drag_line_hidden {
  stroke: #999;
  stroke-width: 0;
  pointer-events: none;
}

.link {
  stroke: #999;
  stroke-width: 5;
  cursor: crosshair;
}

.link_selected {
  stroke: #ff7f0e;
}